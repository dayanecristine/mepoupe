<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.appmepoupe.ContaUsuario"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.168"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />


    <EditText
        android:id="@+id/idAtualizarConta"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="51dp"
        android:ems="10"
        android:hint="ID Conta"
        android:inputType="text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/atualizarEmail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="103dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="102dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtAlterarDados" />

    <EditText
        android:id="@+id/atualizarNome"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_weight="1"
        android:hint="Nome"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/atualizarSenha"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/idAtualizarConta" />

    <EditText
        android:id="@+id/atualizarEmail"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:hint="Email"
        android:layout_marginStart="50dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/atualizarSenha"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/atualizarSenha"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnAtualizarDados"
        app:layout_constraintRight_toRightOf="@+id/atualizarEmail"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/atualizarEmail" />

    <Button
        android:id="@+id/btnDeletarConta"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:onClick="DeleteData"
        android:text="Deletar conta"
        android:textColor="@color/colorAccent"
        android:textSize="09sp"
        android:layout_marginStart="50dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnAtualizarDados"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/colorDarker"
        android:onClick="UpdateData"
        android:text="ATUALIZAR DADOS"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnDeletarConta"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnDeletarConta"
        app:layout_constraintTop_toTopOf="@+id/btnVerContas" />

    <TextView
        android:id="@+id/txtAlterarDados"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        android:text="Para atualizar seus dados, basta inserir o ID da sua conta, substituir os dados aqui e clicar em atualizar ;)"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.149"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnAddConta"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/colorDarker"
        android:text="ADICIONAR CONTA"
        android:textColor="@android:color/white"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnVerContas"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnVerContas" />

    <Button
        android:id="@+id/btnVerContas"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@color/colorDarker"
        android:text="VER CONTAS"
        app:layout_constraintBottom_toTopOf="@+id/btnAddConta"
        app:layout_constraintLeft_toRightOf="@+id/btnAtualizarDados"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:textColor="@android:color/white" />

</android.support.constraint.ConstraintLayout>
