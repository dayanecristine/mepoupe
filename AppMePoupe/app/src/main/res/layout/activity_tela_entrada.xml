<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aluno.appmepoupe.TelaEntrada"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/layout_border_movimentacao_lista"
        android:orientation="vertical"
        android:paddingStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/descEntrada"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="66dp" />

        <EditText
            android:id="@+id/valorEntrada"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Valor (R$)"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="129dp" />

        <EditText
            android:id="@+id/parcelasEntrada"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Quantidade de parcelas"
            android:inputType="number"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="316dp" />

        <Spinner
            android:id="@+id/spinnerRecebimento"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="193dp" />

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="251dp" />

        <Switch
            android:id="@+id/receitaEntrada"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="Receita fixa?"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="383dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrada"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/dataEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textColor="?attr/colorControlNormal"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1" />


    <Button
        android:id="@+id/btnSalvarEntrada"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:text="SALVAR"
        android:onClick="salvarEntrada"
        android:textColor="@android:color/background_light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>
